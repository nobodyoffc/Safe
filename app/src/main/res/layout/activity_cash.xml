<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Selected Cash Summary Card -->
    <LinearLayout
        android:id="@+id/selectedCashSummaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">

        <!-- Cash Count with label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">
            
            <TextView
                android:id="@+id/selectedCashCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/field_name"
                android:layout_marginEnd="4dp"
                android:minWidth="20dp"
                android:minHeight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cash"
                android:textSize="16sp"
                android:textColor="@color/hint" />
        </LinearLayout>

        <!-- Total Amount with F label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/selectedCashAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/field_name"
                android:layout_marginEnd="2dp"
                android:minWidth="20dp"
                android:minHeight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="16sp"
                android:textColor="@color/hint" />
        </LinearLayout>

        <!-- Total CD with cd label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">
            
            <TextView
                android:id="@+id/selectedCashCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/field_name"
                android:layout_marginEnd="2dp"
                android:minWidth="20dp"
                android:minHeight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cd"
                android:textSize="16sp"
                android:textColor="@color/hint" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/delete_button"
            style="@style/ButtonStyle"
            android:layout_margin="4dp"
            android:text="@string/delete" />

        <Button
            android:id="@+id/import_button"
            style="@style/ButtonStyle"
            android:layout_margin="4dp"
            android:text="@string/import_tx" />

        <Button
            android:id="@+id/create_button"
            style="@style/ButtonStyle"
            android:layout_margin="4dp"
            android:text="@string/create" />

        <Button
            android:id="@+id/send_button"
            style="@style/ButtonStyle"
            android:layout_margin="4dp"
            android:text="@string/send" />

    </LinearLayout>

</LinearLayout> 