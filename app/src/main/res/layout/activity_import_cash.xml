<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/cashJsonInputContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/cashJsonInput"
                layout="@layout/layout_text_input_with_scan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cashButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cashClearButton"
                style="@style/ButtonStyle"
                android:text="@string/clear" />

            <Button
                android:id="@+id/cashImportButton"
                style="@style/ButtonStyle"
                android:text="@string/import_tx" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 